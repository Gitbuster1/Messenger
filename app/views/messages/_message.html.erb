<div class="cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %>">
    <div class="d-flex align-items-center name-box">
      <%= image_tag(message.user.chat_avatar, class: 'chat_pfp') %>
      <h6 class="name"><%= message.user.email %></h6>
    </div>
    <div class="body-text">
      <%= message.body %>
    </div>
    <%= render "messages/attachments", message: message %>
    <p class="time"><%= message.created_at.strftime("%H:%M")%> </p>
  </div>
</div>
