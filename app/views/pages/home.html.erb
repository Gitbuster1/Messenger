<div class="container text-white">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="row mt-3">
        <% if current_user %>
          <div class="col-12 d-flex justify-content-center mt-5">
            <h3>Welcome, <%= current_user.email %>!</h3>
          </div>
          <div class="col-12 d-flex justify-content-center mt-4">
            <%= image_tag(current_user.avatar, class: "profile_picture") %>
          </div>
          <div class="col-12 d-flex justify-content-center mt-5"></div>
          <div class="col-12 d-flex justify-content-center mt-3">
            <%= link_to "Start Chatting", rooms_path, class: "btn btn-success btn-centered", style: "width: 200px; height: 55px", data: { turbo: false } %>
          </div>
          <div class="col-12 d-flex justify-content-center mt-3">
            <%= link_to "Edit Account", edit_user_registration_path, class: 'btn btn-secondary btn-centered', style: "width: 200px; height: 40px", data: { turbo: false } %>
          </div>
          <div class="col-12 d-flex justify-content-center" style="margin-top: 300px">
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-centered", style: "width: 160px; height: 40px", data: { turbo: false } %>
          </div>
        <% else %>
          <div class="col-12 d-flex justify-content-center mt-5">
            <h1>Messenger</h1>
          </div>
          <div class="col-12 d-flex justify-content-center mt-1">
            <h5>Welcome to Messenger. A real-time chatting application.</h5>
          </div>
          <div class="col-12 d-flex justify-content-center mt-5"></div>
          <div class="col-12 d-flex justify-content-center mt-5">
            <%= link_to "Login", new_user_session_path, class: "btn btn-primary btn-centered", style: "width: 300px; height: 50px", data: { turbo: false } %>
          </div>
          <div class="col-12 d-flex justify-content-center mt-3">
            <h5>or</h5>
          </div>
          <div class="col-12 d-flex justify-content-center mt-2">
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-secondary btn-centered", style: "width: 300px; height: 50px", data: { turbo: false } %>
          </div>
      <% end %>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
</div>
