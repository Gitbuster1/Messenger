<div class="container session-manager-container">
  <h2 class="session-manager-header text-white">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs text-white">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions d-flex justify-content-center mt-2">
      <%= f.button :submit, "Log in", class: "btn btn-primary mb-2", style: "width: 207px" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
